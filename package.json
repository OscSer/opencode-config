{
  "name": "opencode-config",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "setup": "bun run src/installer.ts",
    "test": "bun test",
    "check": "biome check .",
    "format": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@opencode-ai/plugin": "^1.0.184",
    "@types/bun": "^1.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,js,json,jsonc,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
