{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git checkout *": "ask",
      "git reset *": "ask",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "gh pr *": "ask",
      "npm install *": "ask",
      "npm update *": "ask",
      "pip install *": "ask"
    }
  },
  "agent": {
    "planning-assistant": {
      "mode": "subagent",
      "model": "github-copilot/gpt-5",
      "permission": { "edit": "deny" }
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:~/.config/opencode/prompts/plan-mode.md}",
      "permission": { "edit": "deny" }
    },
    "build": {
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:~/.config/opencode/prompts/dev-mode.md}",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
