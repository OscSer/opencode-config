{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git checkout *": "ask",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "gh pr *": "ask",
      "npm install *": "ask",
      "npm update *": "ask",
      "cat *": "ask"
    }
  },
  "agent": {
    "plan": { "disable": true },
    "build": { "disable": true },
    "sonnet-4.5": {
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:~/.config/opencode/command/dev-mode.md}"
    },
    "haiku-4.5": {
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:~/.config/opencode/command/dev-mode.md}"
    },
    "gpt-5-codex": {
      "model": "github-copilot/gpt-5-codex",
      "prompt": "{file:~/.config/opencode/command/dev-mode.md}"
    },
    "grok-code": {
      "model": "opencode/grok-code",
      "prompt": "{file:~/.config/opencode/command/dev-mode.md}"
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "chrome-devtools": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
