{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git *": "ask",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "git branch *": "allow",
      "* install *": "ask",
      "* update *": "ask",
      "rm -rf *": "ask"
    }
  },
  "agent": {
    "plan": {
      // "model": "github-copilot/gpt-5.1",
      "model": "github-copilot/claude-opus-4.5",
      "permission": { "edit": "deny" }
    },
    "build": {
      // "model": "github-copilot/claude-haiku-4.5",
      "model": "github-copilot/gpt-5.1-codex-mini",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
