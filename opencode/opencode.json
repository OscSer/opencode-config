{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git add *": "ask",
      "git commit *": "ask",
      "git push": "ask",
      "git push *": "ask",
      "gh pr *": "ask",
      "npm install *": "ask"
    }
  },
  "agent": {
    "plan": {
      "model": "github-copilot/claude-sonnet-4",
      "permission": { "edit": "deny" }
    },
    "build": {
      "model": "github-copilot/grok-code-fast-1",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "zen": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/BeehiveInnovations/zen-mcp-server.git",
        "zen-mcp-server"
      ],
      "environment": {
        "OPENROUTER_API_KEY": "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",
        "DISABLED_TOOLS": "chat,thinkdeep,precommit,analyze,testgen,secaudit,docgen,challenge,tracer"
      }
    },
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
