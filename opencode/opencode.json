{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git checkout *": "ask",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "gh pr *": "ask",
      "npm install *": "ask"
    }
  },
  "agent": {
    "plan": {
      "model": "openrouter/anthropic/claude-sonnet-4.5",
      "permission": { "edit": "deny" }
    },
    "build": {
      "model": "opencode/grok-code",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
