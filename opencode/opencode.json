{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "system",
  "agent": {
    "plan": {
      // "model": "github-copilot/gpt-5",
      "model": "github-copilot/claude-sonnet-4",
      "permission": {
        "webfetch": "allow",
        "edit": "deny",
        "bash": {
          "git status": "allow",
          "git status *": "allow",
          "git diff *": "allow",
          "git log *": "allow",
          "git show *": "allow",
          "npx nx *": "allow",
          "grep *": "allow"
        }
      }
    },
    "build": {
      // "model": "zai/glm-4.5",
      // "model": "github-copilot/grok-code-fast-1",
      "model": "opencode/grok-code",
      "permission": {
        "webfetch": "allow",
        "edit": "allow",
        "bash": {
          "*": "allow",
          "git add *": "ask",
          "git commit *": "ask",
          "git push": "ask",
          "git push *": "ask",
          "gh pr *": "ask",
          "npm install *": "ask"
        }
      }
    }
  },
  "provider": {
    "zai": {
      "api": "https://api.z.ai/api/coding/paas/v4"
    }
  },
  "mcp": {
    "zen": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/BeehiveInnovations/zen-mcp-server.git",
        "zen-mcp-server"
      ],
      "environment": {
        "OPENROUTER_API_KEY": "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",
        "DISABLED_TOOLS": "chat,thinkdeep,precommit,analyze,testgen,secaudit,docgen,challenge,tracer"
      }
    },
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
