{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git checkout *": "ask",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "gh pr *": "ask",
      "npm install *": "ask",
      "npm update *": "ask",
      "cat *": "ask",
    }
  },
  "agent": {
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": { "edit": "deny" }
    },
    "build": {
      // "model": "zai-coding-plan/glm-4.6",
      "model": "github-copilot/claude-haiku-4.5",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "chrome-devtools": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
