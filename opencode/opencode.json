{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gemini-3-pro-preview:latest": {
          "name": "Gemini 3 Pro"
        },
        "kimi-k2-thinking:cloud": {
          "name": "Kimi K2 Thinking"
        },
        "minimax-m2:cloud": {
          "name": "Minimax M2"
        },
        "glm-4.6:cloud": {
          "name": "GLM 4.6"
        }
      }
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git checkout *": "ask",
      "git reset *": "ask",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "gh pr *": "ask",
      "npm install *": "ask",
      "npm update *": "ask",
      "pip install *": "ask",
      "cat *": "ask"
    }
  },
  "agent": {
    "plan": {
      // "model": "github-copilot/gpt-5",
      "model": "opencode/gemini-3-pro",
      "permission": { "edit": "deny" }
    },
    "build": {
      // "model": "github-copilot/gpt-5-mini", // gratis
      "model": "opencode/big-pickle", // GLM 4.6 gratis
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
