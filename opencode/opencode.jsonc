{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "default_agent": "plan",
  "agent": {
    "plan": {
      "permission": { "edit": "deny" }
    },
    "build": {
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      // Comandos sensibles
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "curl *": "ask",
      "wget *": "ask",
      // Git
      "git reset *": "ask",
      "git restore *": "ask",
      "git commit *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      // GitHub CLI
      "gh *": "ask",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      // Comandos peligrosos
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      // Obligar a usar tools nativas
      "find *": "deny",
      "cat *": "deny"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "terminal_suspend": "none",
    "model_cycle_recent": "none"
  }
}
