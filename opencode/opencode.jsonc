{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "small_model": "opencode/big-pickle",
  "default_agent": "plan",
  "agent": {
    "plan": {
      "permission": { "edit": "deny" },
    },
    "build": {
      "permission": { "edit": "allow" },
    },
  },
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}",
      },
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
  },
  "plugin": ["@franlol/opencode-md-table-formatter"],
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      // Sensitive commands
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "curl *": "ask",
      "wget *": "ask",
      // Git
      "git reset *": "ask",
      "git restore *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      // GitHub CLI
      "gh *": "ask",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh search code *": "allow",
      // Dangerous commands
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      "python3 *": "deny",
    },
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "terminal_suspend": "none",
    "model_cycle_recent": "none",
  },
}
