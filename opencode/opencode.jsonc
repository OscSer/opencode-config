{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": { "disable": true },
    "build": { "disable": true },
    "main": { "color": "primary" }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true"
      ]
    },
    "sentry": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp"
    },
    "rc": {
      "enabled": false,
      "type": "remote",
      "url": "http://mcps.retailcompass.com/mcp"
    }
  },
  "permission": {
    "external_directory": "allow",
    "read": "allow",
    "bash": {
      "*": "allow",
      "* --help": "allow",
      "* -h": "allow",
      "* --version": "allow",
      "* -v": "allow",
      // dependencies
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      // runtime
      "python*": "ask",
      "node *": "ask",
      // http
      "wget *": "ask",
      "curl *": "allow",
      "curl * POST *": "ask",
      "curl * PUT *": "ask",
      "curl * PATCH *": "ask",
      "curl * DELETE *": "ask",
      // git
      "git *": "ask",
      "git help *": "allow",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git commit *": "allow",
      "git rev-parse *": "allow",
      "git remote -v": "allow",
      "git grep *": "allow",
      "git ls-files *": "allow",
      // gh
      "gh *": "ask",
      "gh help *": "allow",
      "gh search *": "allow",
      "gh status *": "allow",
      "gh config get *": "allow",
      "gh config list *": "allow",
      "gh repo list *": "allow",
      "gh repo view *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr checks *": "allow",
      "gh pr checkout *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      "gh api *": "allow",
      "gh api * POST *": "ask",
      "gh api * PUT *": "ask",
      "gh api * PATCH *": "ask",
      "gh api * DELETE *": "ask",
      // system
      "sudo *": "ask",
      "chmod *": "ask",
      "chown *": "ask"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "session_list": "ctrl+s",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "messages_next": "ctrl+right",
    "messages_previous": "ctrl+left",
    "terminal_suspend": "none",
    "model_cycle_recent": "none"
  },
  "theme": "system",
  "lsp": false
}
