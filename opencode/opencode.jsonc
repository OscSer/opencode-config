{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "opencode/big-pickle",
  "default_agent": "plan",
  "model": "github-copilot/claude-sonnet-4.5",
  "agent": {
    "plan": {
      "permission": { "edit": "deny" },
      "color": "#00bcd4",
    },
    "build": {
      "permission": { "edit": "allow" },
      "color": "#9c27b0",
    },
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
    // "ref": {
    //   "type": "remote",
    //   "url": "https://api.ref.tools/mcp?apiKey={env:REF_API_KEY}",
    // },
    "devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true",
      ],
    },
  },
  "plugin": ["@franlol/opencode-md-table-formatter"],
  "permission": {
    "edit": "deny",
    "doom_loop": "ask",
    "skill": "allow",
    "webfetch": "allow",
    "external_directory": "allow",
    "bash": {
      "*": "allow",
      // package managers & runtimes
      "* install *": "ask",
      "* uninstall *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "* remove *": "ask",
      "* delete *": "ask",
      "python*": "ask",
      // http
      "wget *": "ask",
      "curl *": "ask",
      "curl -I *": "allow",
      "curl -i *": "allow",
      "curl -s *": "allow",
      "curl -sS *": "allow",
      "curl -S *": "allow",
      "curl -v *": "allow",
      "curl -X GET *": "allow",
      "curl -X HEAD *": "allow",
      "curl -X POST *": "allow",
      "curl -X PUT *": "allow",
      "curl -X PATCH *": "allow",
      "curl -X DELETE *": "allow",
      "curl --request GET *": "allow",
      "curl --request POST *": "allow",
      "curl -d *": "allow",
      "curl --data *": "allow",
      "curl --data-raw *": "allow",
      "curl --json *": "allow",
      "curl -H *": "allow",
      "curl --header *": "allow",
      // git
      "git reset *": "ask",
      "git restore *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git stash *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      "git clone *": "deny",
      "git revert *": "deny",
      // gh
      "gh *": "ask",
      "gh help *": "allow",
      "gh search *": "allow",
      "gh status *": "allow",
      "gh config get *": "allow",
      "gh config list *": "allow",
      "gh repo list *": "allow",
      "gh repo view *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr checks *": "allow",
      "gh pr checkout *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      "gh api *": "allow",
      "gh api * POST": "deny",
      "gh api * PUT": "deny",
      "gh api * PATCH": "deny",
      "gh api * DELETE": "deny",
      // system
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
    },
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "messages_next": "ctrl+right",
    "messages_previous": "ctrl+left",
    "terminal_suspend": "none",
    "model_cycle_recent": "none",
  },
  "theme": "system",
  "disabled_providers": ["openrouter"],
}
