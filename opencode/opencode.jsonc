{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "small_model": "opencode/big-pickle",
  "default_agent": "plan",
  "agent": {
    "plan": {
      "color": "#ffb74d",
      "permission": { "edit": "deny" },
    },
    "build": {
      "color": "#4dd0e1",
      "permission": { "edit": "allow" },
    },
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
  },
  "plugin": ["@franlol/opencode-md-table-formatter"],
  "permission": {
    "edit": "deny",
    "doom_loop": "ask",
    "external_directory": "ask",
    "skill": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      // Sensitive commands
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "curl *": "ask",
      "wget *": "ask",
      "python3 *": "ask",
      // Git
      "git reset *": "ask",
      "git restore *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      "git clone *": "deny",
      "git revert *": "deny",
      // GitHub CLI
      "gh *": "ask",
      "gh search *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr checks *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      // Dangerous commands
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
    },
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "terminal_suspend": "none",
    "model_cycle_recent": "none",
  },
}
