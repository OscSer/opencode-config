{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "opencode/gpt-5-nano",
  "default_agent": "plan",
  "agent": {
    "plan": {
      "permission": { "edit": "deny" },
      "color": "#00bcd4"
    },
    "build": {
      "permission": { "edit": "allow" },
      "color": "#9c27b0"
    },
    "explore": {
      "model": "github-copilot/gemini-3-flash-preview"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "plugin": ["opencode-pty@latest", "@nick-vi/opencode-type-inject@latest"],
  "permission": {
    "edit": "deny",
    "doom_loop": "ask",
    "skill": "allow",
    "webfetch": "allow",
    "external_directory": "allow",
    "bash": {
      "*": "allow",
      // package managers & runtimes
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "* remove *": "ask",
      "* delete *": "ask",
      "python *": "ask",
      "python3 *": "ask",
      // http
      "wget *": "ask",
      "curl *": "ask",
      // git
      "git clone *": "ask",
      "git reset *": "ask",
      "git restore *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git stash *": "ask",
      "git revert *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      // gh
      "gh *": "ask",
      "gh help *": "allow",
      "gh search *": "allow",
      "gh status *": "allow",
      "gh config get *": "allow",
      "gh config list *": "allow",
      "gh repo list *": "allow",
      "gh repo view *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr checks *": "allow",
      "gh pr checkout *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      "gh api *": "allow",
      "gh api * POST": "deny",
      "gh api * PUT": "deny",
      "gh api * PATCH": "deny",
      "gh api * DELETE": "deny",
      // system
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "messages_next": "ctrl+right",
    "messages_previous": "ctrl+left",
    "terminal_suspend": "none",
    "model_cycle_recent": "none"
  },
  "lsp": false,
  "theme": "system"
}
