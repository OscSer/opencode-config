{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "default_agent": "plan",
  "agent": {
    "plan": {
      "permission": { "edit": "deny" },
      "color": "#9e9e9e",
    },
    "build": {
      "permission": { "edit": "allow" },
      "color": "#00bcd4",
    },
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
    "web-search": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}",
      },
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}",
      },
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}",
      },
    },
  },
  "plugin": ["@franlol/opencode-md-table-formatter"],
  "permission": {
    "edit": "deny",
    "doom_loop": "ask",
    "external_directory": "ask",
    "skill": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      // Sensitive commands
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "curl *": "ask",
      "wget *": "ask",
      "python *": "ask",
      "python3 *": "ask",
      // Git
      "git reset *": "ask",
      "git restore *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      "git clone *": "deny",
      "git revert *": "deny",
      // GitHub CLI
      "gh *": "ask",
      "gh search *": "allow",
      "gh repo view *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr checks *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      // Dangerous commands
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
    },
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "messages_next": "ctrl+right",
    "messages_previous": "ctrl+left",
    "terminal_suspend": "none",
    "model_cycle_recent": "none",
  },
}
