{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "small_model": "github-copilot/claude-haiku-4.5",
  "default_agent": "plan",
  "agent": {
    "plan": {
      "permission": { "edit": "deny" }
    },
    "build": {
      "permission": { "edit": "allow" }
    },
    "explore": {
      "model": "github-copilot/claude-haiku-4.5"
    }
  },
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      }
    }
  },
  "plugin": ["@franlol/opencode-md-table-formatter"],
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      // Sensitive commands
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "curl *": "ask",
      "wget *": "ask",
      // Git
      "git reset *": "ask",
      "git restore *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git add *": "deny",
      "git push *": "deny",
      // GitHub CLI
      "gh *": "ask",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh search code *": "allow",
      // Dangerous commands
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      // Force use of native tools
      "find *": "deny",
      "cat *": "deny"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "terminal_suspend": "none",
    "model_cycle_recent": "none"
  }
}
