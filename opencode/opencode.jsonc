{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "opencode/big-pickle",
  "default_agent": "build",
  "agent": {
    "explore": {
      "model": "kimi-for-coding/k2p5"
    },
    "general": {
      "model": "kimi-for-coding/k2p5"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "memo": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/memo"]
    }
  },
  "plugin": ["opencode-pty@latest", "@nick-vi/opencode-type-inject@latest"],
  "permission": {
    "skill": "allow",
    "webfetch": "allow",
    "external_directory": "allow",
    // "edit": {
    //   "*": "allow",
    //   "*.md": "ask",
    //   "*.txt": "ask"
    // },
    "bash": {
      "*": "allow",
      // package managers & runtimes
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "* remove *": "ask",
      "* delete *": "ask",
      "python *": "ask",
      "python3 *": "ask",
      // http
      "wget *": "ask",
      "curl *": "ask",
      // prefer native tools for file search/read
      "ls": "deny",
      "ls *": "deny",
      "find *": "deny",
      "grep *": "deny",
      "rg *": "deny",
      "cat *": "deny",
      "head *": "deny",
      "tail *": "deny",
      // shell text transforms stay gated
      "sed *": "ask",
      "awk *": "ask",
      "echo *": "ask",
      // git
      "git *": "ask",
      "git help *": "allow",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git rev-parse *": "allow",
      "git remote -v": "allow",
      // gh
      "gh *": "ask",
      "gh help *": "allow",
      "gh search *": "allow",
      "gh status *": "allow",
      "gh config get *": "allow",
      "gh config list *": "allow",
      "gh repo list *": "allow",
      "gh repo view *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr list *": "allow",
      "gh pr status *": "allow",
      "gh pr checks *": "allow",
      "gh pr checkout *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      "gh api *": "ask",
      "gh api --method GET *": "allow",
      "gh api -X GET *": "allow",
      // system
      "sudo *": "ask",
      "chmod *": "ask",
      "chown *": "ask"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "app_exit": "ctrl+c",
    "model_list": "shift+tab",
    "command_list": "f2",
    "messages_next": "ctrl+right",
    "messages_previous": "ctrl+left",
    "terminal_suspend": "none",
    "model_cycle_recent": "none"
  },
  "lsp": false,
  "theme": "ayu"
}
