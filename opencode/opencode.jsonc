{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "small_model": "opencode/big-pickle",
  "default_agent": "plan",
  "agent": {
    "plan": {
      // "model": "github-copilot/claude-opus-4.5",
      // "model": "anthropic/claude-opus-4-5",
      "model": "github-copilot/gpt-5.1",
      "permission": { "edit": "deny" }
    },
    "build": {
      // "model": "opencode/glm-4.7-free",
      // "model": "github-copilot/claude-haiku-4.5",
      "model": "anthropic/claude-sonnet-4-5",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      // Allow by default
      "*": "allow",
      // Sensitive commands
      "curl *": "ask",
      "wget *": "ask",
      "gh *": "ask",
      "git reset *": "ask",
      "git restore *": "ask",
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      // Problematic commands
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      "find *": "deny",
      "grep *": "deny",
      "cat *": "deny",
      "git add *": "deny",
      "git commit *": "deny",
      "git push *": "deny"
    }
  },
  "keybinds": {
    "input_newline": "ctrl+l",
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "command_list": "<leader>p",
    "terminal_suspend": "none"
  }
}
