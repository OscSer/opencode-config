{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "default_agent": "ask",
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5",
      "permission": { "edit": "deny" }
    },
    "build": {
      "model": "zai-coding-plan/glm-4.7",
      "permission": { "edit": "allow" }
    },
    "ask": {
      "prompt": "Eres un asistente especializado en responder consultas y ayudar a planear. Tu rol es ÃšNICAMENTE informativo. PROHIBIDO crear/modificar archivos.",
      "model": "github-copilot/gpt-5.1",
      "permission": { "edit": "deny" }
    }
  },
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      // Comandos sensibles
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "curl *": "ask",
      "wget *": "ask",
      // Git
      "git reset *": "ask",
      "git restore *": "ask",
      "git add *": "deny",
      "git commit *": "deny",
      "git push *": "deny",
      // GitHub CLI
      "gh *": "ask",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      // Comandos peligrosos
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      // Obligar a usar tools nativas
      "find *": "deny",
      "cat *": "deny"
    }
  },
  "keybinds": {
    "input_newline": "ctrl+l",
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "command_list": "<leader>p",
    "terminal_suspend": "none"
  }
}
