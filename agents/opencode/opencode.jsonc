{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      // "model": "anthropic/claude-opus-4-5",
      "model": "github-copilot/claude-opus-4.5",
      "permission": {
        "edit": "deny"
      }
    },
    "build": {
      // "model": "anthropic/claude-haiku-4-5",
      "model": "github-copilot/claude-haiku-4.5",
      "permission": {
        "edit": "allow"
      }
    }
  },
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=f337a73e-f517-4035-8fb0-7495f841fe34&tools=web_search_exa,deep_search_exa"
    },
    "mgrep": {
      "type": "local",
      "command": ["mgrep", "mcp"]
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      "find *": "deny",
      "curl *": "ask",
      "wget *": "ask",
      "gh *": "allow",
      "gh auth *": "deny",
      "gh repo delete *": "deny",
      "gh repo archive *": "deny",
      "gh issue delete *": "deny",
      "gh pr merge *": "deny",
      "gh pr revert *": "deny",
      "gh release *": "deny",
      "gh secret *": "deny",
      "gh variable *": "deny",
      "gh ssh-key *": "deny",
      "gh gpg-key *": "deny",
      "gh run *": "deny",
      "gh workflow *": "deny",
      "gh extension *": "deny",
      "gh config *": "deny",
      "git add *": "deny",
      "git commit *": "deny",
      "git push *": "deny",
      "git reset *": "deny",
      "git restore *": "deny",
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "cat >*": "deny",
      "cat > *": "deny",
      "cat >>*": "deny",
      "cat >> *": "deny",
      "cat <<*": "deny",
      "cat << *": "deny"
    }
  },
  "keybinds": {
    "input_newline": "ctrl+l",
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "command_list": "<leader>p",
    "terminal_suspend": "<leader>z"
  },
  "theme": "system"
}
