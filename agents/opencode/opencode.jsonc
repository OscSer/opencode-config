{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "gh *": "ask",
      "git *": "ask",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "git branch *": "allow",
      "git add *": "deny",
      "git push *": "deny",
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "ls *": "deny",
      "cat *": "deny",
      "grep *": "deny",
      "find *": "deny"
    }
  },
  "agent": {
    "plan": {
      // "model": "github-copilot/claude-opus-4.5", // 3x
      "model": "github-copilot/gpt-5.2", // 1x
      "permission": { "edit": "deny" }
    },
    "build": {
      // "model": "opencode/big-pickle", // free
      "model": "github-copilot/gpt-5.1-codex-max", // x1
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_newline": "ctrl+l",
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "command_list": "<leader>p"
  }
}
