{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "git *": "ask",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "git branch *": "allow",
      "* install *": "ask",
      "* update *": "ask",
      "rm -rf *": "ask"
    }
  },
  "agent": {
    "plan": {
      "permission": { "edit": "deny" },

      // 3x | el mejor en razonamiento y planificacion
      // "model": "github-copilot/claude-opus-4.5",

      // 1x | nueva compactacion, sesiones largas y autonomas, (interesante tambien en build)
      "model": "github-copilot/gpt-5.1-codex-max"
    },
    "build": {
      "permission": { "edit": "allow" },

      // gratis | GLM 4.6, mejor codigo estructurado, tareas largas
      "model": "opencode/big-pickle"

      // 0.33x | mejor tool calling, multimodal
      // "model": "github-copilot/claude-haiku-4.5",
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_clear": "ctrl+d",
    "input_newline": "ctrl+l",
    "session_new": "ctrl+n"
  }
}
