{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "gh *": "ask",
      "git add *": "deny",
      "git commit *": "deny",
      "git push *": "deny",
      "git restore *": "deny",
      "git branch -D *": "deny",
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "cat *": "deny",
      "rg *": "deny",
      "grep *": "deny"
    }
  },
  "agent": {
    "plan": {
      "model": "github-copilot/gpt-5.1-codex-max",
      "permission": { "edit": "deny" }
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "keybinds": {
    "input_newline": "ctrl+l",
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "command_list": "<leader>p"
  }
}
