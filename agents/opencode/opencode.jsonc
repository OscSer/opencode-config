{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "agent": {
    "plan": {
      // "model": "anthropic/claude-opus-4-5",
      "model": "amazon-bedrock/global.anthropic.claude-opus-4-5-20251101-v1:0",
      "permission": { "edit": "deny" }
    },
    "build": {
      "model": "github-copilot/gpt-5.1-codex-max",
      "permission": { "edit": "allow" }
    }
  },
  "mcp": {
    // "context7": {
    //   "type": "remote",
    //   "url": "https://mcp.context7.com/mcp"
    // },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=f337a73e-f517-4035-8fb0-7495f841fe34&tools=web_search_exa,deep_search_exa"
    },
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "sudo *": "deny",
      "chmod *": "deny",
      "chown *": "deny",
      "format *": "deny",
      "fdisk *": "deny",
      "dd *": "deny",
      "curl *": "ask",
      "wget *": "ask",
      "gh *": "ask",
      "git add *": "deny",
      "git commit *": "deny",
      "git push *": "deny",
      "git restore *": "deny",
      "git branch -d *": "deny",
      "git branch -D *": "deny",
      "* install *": "ask",
      "* update *": "ask",
      "* add *": "ask",
      "cat >*": "deny",
      "cat > *": "deny",
      "cat >>*": "deny",
      "cat >> *": "deny",
      "cat <<*": "deny",
      "cat << *": "deny"
    }
  },
  "keybinds": {
    "input_newline": "ctrl+l",
    "input_clear": "ctrl+d",
    "session_new": "ctrl+n",
    "command_list": "<leader>p"
  }
}
